<launch>

    <node pkg="frontier_exploration" type="explore_client" name="explore_client" output="screen"/>

    <node pkg="frontier_exploration" type="explore_server" name="explore_server" output="screen">

          <param name="frequency" value="1.0"/>

          <!-- Should be less than sensor range -->
          <param name="goal_aliasing" value="2.0"/>
    
          <rosparam file="$(find diff_drive_mapping_robot_navigation)/config/costmap_common_params.yaml" 
                    command="load" ns="explore_costmap" />
          <rosparam file="$(find diff_drive_mapping_robot_navigation)/config/costmap_exploration.yaml" 
                    command="load" ns="explore_costmap" />

<rosparam file="$(find diff_drive_mapping_robot_navigation)/config/static_map_params.yaml" 
                    command="load" ns="explore_costmap/external_map" />

    </node>

</launch>
